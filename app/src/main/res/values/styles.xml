<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <!--BaseButton 基础的button样式-->
    <style name="BaseButtonStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--背景为淡蓝色的按钮-->
    <style name="Button1Style" parent="BaseButtonStyle">
        <item name="android:background">@drawable/bt1_selector</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--背景为白色的按钮-->
    <style name="Button2Style" parent="BaseButtonStyle">
        <item name="android:background">@drawable/bt2_selector</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--占用比例为1-->
    <style name="Col1Style">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>






</resources>
